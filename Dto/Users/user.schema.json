{
    "$schema": "http://json-schema.org/draft/2019-09/schema",
    "description": "Модель пользователя",
    "type": "object",
    "required": [
        "id",
        "name",
        "surname",
        "gender",
        "email"
    ],
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid",
            "description": "Идентификатор пользователя",
            "nullable": false
        },
        "name": {
            "type": "string",
            "description": "Имя пользователя",
            "nullable": false
        },
        "surname": {
            "type": "string",
            "description": "Фамилия пользователя",
            "nullable": false
        },
        "fathername": {
            "type": "string",
            "description": "Отчество пользователя",
            "nullable": true
        },
        "gender": {
            "type": "string",
            "description": "Пол пользователя",
            "enum": ["Male", "Femail"],
            "nullable": false
        },
        "email": {
            "type": "string",
            "format": "email",
            "description": "Email пользователя",
            "nullable": false
        }
    }
}